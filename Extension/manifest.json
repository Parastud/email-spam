{
  "manifest_version": 3,
  "name": "SpamShield - Email Spam Detector",
  "version": "1.0",
  "description": "Detects spam emails in Gmail using a Machine Learning API.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://mail.google.com/*", "http://localhost:8000/*"],

  "action": {
    "default_title": "SpamShield"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
